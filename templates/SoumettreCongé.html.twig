{% extends "empty.html.twig" %}
{% block title %}Soumettre une demande{% endblock %}
{% block head %}
{{parent()}}
<style>
  input[type="date"] {
            border: 1px dotted #999;
            border-radius: 7px;
        
            -webkit-appearance: none;
        }
        
</style>

{% endblock %}
{% block base %}{{parent()}}{% endblock %}
{% block content %}
<div class="my-3 my-md-5">
        <div class="container">
            <div class="row">
                <div class="col col-login mx-auto">
                    <form action="envoieDemande.php" method="post" class="card">
                        <fieldset class="form-fieldset">
                            <div class="card-title text-center">Demande de congé</div>
                            <div class="form-group text-center">
                            <label class="form-label">Début de congé<span class="form-required">*</span></label>
                            <input type="date" name="start" value="{{dateDuJour}}" min="{{dateDuJour}}">
                            </div>
                            <div class="form-group text-center">
                            <label class="form-label">Fin de congé<span class="form-required">*</span></label>
                            <input type="date" name="end" value="{{dateDuJour}}" min="{{dateDuJour}}">
                            </div>
                            <mat-divider>
                            </mat-divider>
                            <div class"text-center">
                                <input class="btn btn-primary btn-block" type="submit" value="Soumettre la demande">
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}